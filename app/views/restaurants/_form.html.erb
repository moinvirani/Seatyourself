<%= form_for(@restaurant) do |f| %>


<div class="field">
	<%= f.label :name %> <br>
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :description %> <br>
	<%= f.text_area :description %>
</div>

<div class="field">
	<%= f.label :price_in_cents %> <br>
	<%= f.number_field :price_in_cents %>
</div>

<div class="action">
	<%= f.submit %>
</div>
<% end %>