<%= form_for @restaurant, html: { multipart: true } do |f| %>

<div class="field">
	<%= f.label "Restaurant Name" %> <br>
	<%= f.text_field :name %>
</div>


<div class="field">
	<%= f.label :email_address %> <br>
	<%= f.text_field :email %>
</div>

<div class="field">
	<%= f.label :address %> <br>
	<%= f.text_field :address %>
</div>



<div class="field">
	<%= f.label :phone_number %> <br>
	<%= f.text_field :phone %>
</div>


 <label>Category:</label> <br>
 <%= collection_select(:restaurant, :category_id, Category.all, :id, :name, :prompt => 'Select One')  %>

 <%# f.select :category, [ 'Thai', 'Indian', 'Chinese', 'French', 'Italian', 'Canadian', 'Japanese' ], :prompt => 'Select One' %>

			<br>

 <label>Neighbourhood:</label> <br>
 <%= f.select :neighbourhood, [ 'Downtown', 'Markham', 'Scarbarough', 'Missisagaua', 'Queens Street ' ], :prompt => 'Select One' %>
 
<br>

 <label>Price Range:</label> <br>
 <%= f.select :price, [ '$', '$$', '$$$', '$$$$', 'Bitcoin' ], :prompt => 'Select One' %>
 

     <div class="field">
    <%= f.label :capacity %> <br>
    <%= f.number_field :capacity, :min => 1, :max => 500 %>
    <%# note: validations should always be in the model. the min/max set here should be changed to use the same values set there %>
  </div>


<div class="field">
	<%= f.label :description %> <br>
	<%= f.text_area :description %>
</div>

<div class="field">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
</div>


<div class="action">
	<%= f.submit %>
</div>
<% end %>
